<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>p list</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400" rel="stylesheet">
    <script src="https://use.fontawesome.com/0d394c3591.js"></script>
    <link href="https://use.fontawesome.com/0d394c3591.css" media="all" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.10.2/Sortable.min.js"></script>
    <link rel="stylesheet" href="./task_list.css">

</head>

<body>
    <!-- partial:index.partial.html -->

    <body>
        <header class="container">

            <button id="back" class="col-md-2 left back" onclick="window.location.href='/'" style="border-width: 0px; font-size: 30px;">
            <i class="fa fa-arrow-left"></i>
            </button>

            <h1 class="title col-md-4 left"><i class="fa fa-sticky-note-o" aria-hidden="true"></i><span id="user"> </span>Task List</h1>
            <button onClick="new_item()" id="new" class="col-md-2 right add"><i class="fa fa-plus-circle" aria-hidden="true"></i> New note </button>
        </header>
        <div style="clear:both"></div>
        <section class="container">

            <div id="stick-box" class="row">


                <% for(var i = 0; i < items.length; i++) { %>

                    <div class="col-md-4 list-col" id="<%=items[i].id%>">
                        <button class="del stick-icon deletebtnforjs deletebtnforjs1">
                            <i class="fa fa-trash-o items deletebtnforjs deletebtnforjs2" aria-hidden="true"></i>
                        </button>
                        <div class="col-md-12 list">
                            <h2 class="list-title">
                                <%=items[i].title%>
                            </h2>
                            <ul contenteditable="true" class="task-wrapper">

                                <% for(var j = 0; j < items[i].list.length; j++) { %>
                                    <% if(items[i].list[j].done == 0){ %>
                                        <li class="task">
                                            <%=items[i].list[j].name%>
                                        </li>
                                        <% } else{%>
                                            <li class="task complete">
                                                <%=items[i].list[j].name%>
                                            </li>
                                            <% }%>
                                                <% }%>


                            </ul>
                        </div>
                    </div>

                    <% }%>






                        <!-- add note -->
                        <div class="add_note_win_0" id="add_note">
                            <div class="add_note_win_1" id="add_note_1">
                                <div class="add_note_win_1_con">
                                    <div class="wrapper" id="add_note_wrapper">

                                        <div class="noteNmaeAdd">
                                            <label for="topic">topic</label>
                                            <input type="text" id="InputADDNoteName" class="noteNmaeAddtext" />
                                        </div>

                                        <div class="wra" id="wra_ID">

                                            <!--            
                    <div class="item">
                    <i  class="fa fa-bars" aria-hidden="true"></i>
                    <span class="text">One</span>
                    <i class="fa fa-trash-o items" aria-hidden="true"></i>
                    <i class="fa fa-pencil edit_task_one" aria-hidden="true"></i>
                     <i class="fa fa-check mark" aria-hidden="true"></i>
                    </div>

                    <div class="item done">
                    <i  class="fa fa-bars" aria-hidden="true"></i>
                    <span class="text">two</span>
                    
                    <i class="fa fa-trash-o items" aria-hidden="true"></i>
                    <i class="fa fa-pencil edit_task_one" aria-hidden="true"></i>
                    <i class="fa fa-repeat mark" aria-hidden="true"></i>
                    </div>

                    -->

                                        </div>


                                        <div class="add_task">
                                            <input type="text" id="InputADD" class="InputADD" />
                                            <div class="control_Add_button">
                                                <button class="BAdd" id="add_note_BAdd">
                        <i class="fa fa-plus-square" aria-hidden="true"></i> task
                    </button>
                                            </div>
                                        </div>
                                        <div class="control_button">
                                            <button class="BClear" id="add_note_BClear" onclick="close_win()">
                        cancel
                        <i class="fa fa-times" aria-hidden="true"></i>
                    </button>




                                            <form id="form1" method="post">
                                                <input type="hidden" name="list_data" id="add_note_list_data">

                                                <input class="BSubmit" id="add_note_Submit" type="submit" name="Bsubmit" value="Submit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                            </form>
                                        </div>



                                    </div>
                                    <div class="edit_item" id="add_note_edit_item">
                                        <div class="edit_item_con">
                                            <div class="edit_add_item">
                                                <input type="text" id="add_note_edit_ele" class="Input_edit_ADD" />
                                                <div class="control_Add_button">
                                                    <button class="BAdd" id="BEditEle_add">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- add note end -->




                        <!-- update note -->
                        <div class="update_win_0" id="update_note">
                            <div class="update_win_1" id="update_note_1">

                                <script>
                                    let items = <%-JSON.stringify(items)%>;
                                </script>

                                <div class="update_win_1_con">
                                    <div class="wrapper" id="update_wrapper">

                                        <div class="noteNmaeAdd">
                                            <label for="topic">topic</label>
                                            <input type="text" id="InputUpdateNoteName" class="noteNmaeAddtext" />
                                        </div>

                                        <div class="wra" id="update_wra_ID">

                                        </div>

                                        <div class="add_task">
                                            <input type="text" id="InputADD_update" class="InputADD" />
                                            <div class="control_Add_button">
                                                <button class="BAdd" id="add_note_BAdd_update">
                                        <i class="fa fa-plus-square" aria-hidden="true"></i> task
                                    </button>
                                            </div>
                                        </div>

                                        <div class="control_button">
                                            <button class="BClear" id="update_note_BClear" onclick="close_win()">
                                    cancel
                                    <i class="fa fa-times" aria-hidden="true"></i>
                                </button>

                                            <form id="form2" method="post">
                                                <input type="hidden" name="update_list_data" id="update_note_list_data">

                                                <input class="BSubmit" id="update_note_Submit" type="submit" name="Bsubmit" value="Update"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                            </form>
                                        </div>

                                    </div>
                                    <div class="edit_item" id="update_note_edit_item">
                                        <div class="edit_item_con">
                                            <div class="edit_add_item">
                                                <input type="text" id="update_note_edit_ele" class="Input_edit_ADD" />
                                                <div class="control_Add_button">
                                                    <button class="BAdd" id="BEditEle_update">
                                            <i class="fa fa-pencil" aria-hidden="true"></i>
                                        </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- update note end -->



        </section>

    </body>


    <script src="./task_list.js"></script>

</body>

</html>